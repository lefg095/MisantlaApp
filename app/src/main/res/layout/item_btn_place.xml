<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="16dp"
    android:id="@+id/ly_btn_generic"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/iv_btn_generic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roun_btn30"
        android:scaleType="fitCenter"
        android:src="@drawable/placewf64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tv_btn_generic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:fontFamily="sans-serif-medium"
        android:textSize="12dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="COMIDA"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_btn_generic"
        app:layout_constraintEnd_toEndOf="@+id/iv_btn_generic"
        app:layout_constraintStart_toStartOf="@+id/iv_btn_generic" />

</androidx.constraintlayout.widget.ConstraintLayout>