<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/blue_4ever"
        app:sliderIndicatorUnselectedColor="#5A5A5A"
        android:layout_marginTop="12dp"
        app:sliderScrollTimeInSec="1" />

    <TextView
        android:id="@+id/tvDescrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn15"
        android:backgroundTint="@color/grey_font"
        android:padding="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/text_dashboard"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:fontFamily="sans-serif-medium"
        android:text="Turismo"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:drawableTop="@drawable/turism2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescrip"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/orange"
        android:fontFamily="sans-serif-medium"
        android:text="Comida"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:drawableTop="@drawable/eat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="sans-serif-medium"
        android:text="Boutiques"
        android:textStyle="bold"
        android:drawableTop="@drawable/clothes"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey"
        android:text="abarrotes"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:drawableTop="@drawable/groceries"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/coffe"
        android:text="escuelas"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:drawableTop="@drawable/school"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/teal_200"
        android:text="Otros"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:drawableTop="@drawable/service"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintWidth_percent="0.45"/>


    <!--ca-app-pub-3545246479745746/8342199925-->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>