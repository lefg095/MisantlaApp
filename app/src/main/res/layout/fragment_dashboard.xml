<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/blue_4ever"
        app:sliderIndicatorUnselectedColor="#5A5A5A"
        android:layout_marginTop="12dp"
        app:sliderScrollTimeInSec="1" />

    <TextView
        android:id="@+id/tvDescrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey_font"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="@string/text_dashboard"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/roun_btn30"
        android:scaleType="fitCenter"
        android:src="@drawable/turismo2"
        app:layout_constraintStart_toStartOf="@+id/tvDescrip"
        app:layout_constraintTop_toBottomOf="@+id/tvDescrip"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURISMO"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/roun_btn30"
        android:scaleType="fitCenter"
        android:src="@drawable/comida2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMIDA"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:scaleType="fitCenter"
        android:src="@drawable/boutique3"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOUTIQUES"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="@+id/btn3"
        app:layout_constraintStart_toStartOf="@+id/btn3" />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey"
        android:paddingBottom="8dp"
        android:src="@drawable/groceries"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABARROTES"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn4"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4" />

    <ImageButton
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:src="@drawable/escuelas1"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCUELAS"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintEnd_toEndOf="@+id/btn5"
        app:layout_constraintStart_toStartOf="@+id/btn5" />

    <ImageButton
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/teal_200"
        android:paddingBottom="12dp"
        android:src="@drawable/service"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintWidth_percent="0.25"/>

    <TextView
        android:id="@+id/tv_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTROS"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/roun_btn30"
        android:backgroundTint="@color/grey_font"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn6"
        app:layout_constraintEnd_toEndOf="@+id/btn6"
        app:layout_constraintStart_toStartOf="@+id/btn6" />

    <!--ca-app-pub-3545246479745746/8342199925-->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3545246479745746/83 42199925"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>